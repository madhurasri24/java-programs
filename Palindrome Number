class Solution {
    public boolean isPalindrome(int x) {
        int orginal =x;
        int rev = 0;
        while(x != 0){
            rev = rev * 10 + (x % 10);
            x = x / 10;
            
        }
        if(orginal == rev){
            if(rev < 0){
                return false;
            }
            else{
                return true;
            }
        }
        else{
            return false;
        }
    }
}
