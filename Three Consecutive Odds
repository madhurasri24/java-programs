import java.util.*;

public class Solution {
    public static boolean threeConsecutiveOdds(int[] arr) {
        int count = 0;

        for (int num : arr) {
            if (num % 2 != 0) { 
                count++;
                if (count == 3) {
                    return true;
                }
            } else {
                count = 0; 
            }
        }

        return false;
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int n = sc.nextInt(); 
        int arr[] = new int[n];

        for (int i = 0; i < n; i++) {
            arr[i] = sc.nextInt();
        }

        System.out.println(threeConsecutiveOdds(arr));
    }
}
